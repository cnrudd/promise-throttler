{
  "name": "promise-throttler",
  "version": "2.0.1",
  "type": "module",
  "sideEffects": false,
  "homepage": "https://github.com/cnrudd/promise-throttler",
  "description": "A library to throttle promises sequentially or in parallel",
  "main": "dist/main.min.js",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.min.js",
      "development": "./dist/main.js"
    }
  },
  "types": "dist/main.d.ts",
  "author": "Colin Rudd",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cnrudd/promise-throttler.git"
  },
  "scripts": {
    "build": "tsc && npm run minify",
    "build:dev": "tsc",
    "minify": "terser dist/main.js -o dist/main.min.js --source-map",
    "start": "npm test",
    "lint": "eslint src/*.ts",
    "test": "npm run lint && npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "prepublishOnly": "npm test"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "keywords": [
    "promise",
    "throttle",
    "async",
		"await",
		"promises"
  ],
  "files": [
    "dist/main.js",
    "dist/main.min.js",
    "dist/main.min.js.map",
    "dist/main.d.ts",
    "dist/main.d.ts.map"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "coveralls": "~3.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^61.5.0",
    "globals": "^16.5.0",
    "jest": "30.2.0",
    "terser": "^5.44.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
