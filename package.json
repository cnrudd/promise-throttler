{
  "name": "promise-throttler",
  "version": "3.0.0",
  "type": "module",
  "homepage": "https://github.com/cnrudd/promise-throttler",
  "description": "A library to throttle promises",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": "Colin Rudd",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cnrudd/promise-throttler.git"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && npm run lint && npm test",
    "lint": "eslint src/*.ts",
    "test": "npm run build && node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ]
  },
  "keywords": [
    "promise",
    "throttle"
  ],
  "files": [
    "dist/main.js",
    "dist/main.d.ts"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "coveralls": "~3.1.1",
    "eslint": "^9.39.2",
    "eslint-plugin-jsdoc": "^61.5.0",
    "globals": "^16.5.0",
    "jest": "30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
